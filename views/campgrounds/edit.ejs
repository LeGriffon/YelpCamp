<%- include("../partials/header") %>

<div class="container">	
	<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Edit <%= campground.name %></Campground></h1>
	</div>
    <div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input class="form-control" type="number" value="<%= campground.price %>" min="0.01" step="0.01" name="campground[price]">
			</div>
			<div class="form-group">
				<label for="image">Image Url</label>
				<input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
				<small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Submit!
				</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
	</div>
</div>
<%- include("../partials/footer") %>