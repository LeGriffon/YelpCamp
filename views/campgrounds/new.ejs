<%- include("../partials/header") %>

<div class="container">	
	<div class="row justify-content-center">
	<div class="col-md-12 text-center">
		<h1>Create a New Campground</h1>
	</div>
    <div class="col-xs-12 col-md-6 col-lg-4">
		<form action="/campgrounds" method="post">
			<div class="form-group">
				<label for="name">Name</label>
				<input class="form-control" type="text" placeholder="Yosemite" name="name">
			</div>			
			<div class="form-group">
				<label for="price">Price</label>
				<input class="form-control" type="number" placeholder="Dollar amount" min="0.01" step="0.01" name="price">
			</div>
			<div class="form-group">
				<label for="image">Image Url</label>
				<input class="form-control" type="text" placeholder="https://images.unsplash.com/..." name="image">
				<small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<input class="form-control" type="text" placeholder="Put the description here" name="description">
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">
					Submit!
				</button>
			</div>
		</form>
		<a href="/campgrounds">Go Back</a>
	</div>
	</div>
</div>
<%- include("../partials/footer") %>